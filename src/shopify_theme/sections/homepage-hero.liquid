<div class="inner">
  <div class="image">
  </div>
  <div class="content">
    <div>
      <h2>{{ section.settings.hero_text }}</h2>
      <a href="{{ section.settings.hero_cta_link }}">
        {{ section.settings.hero_cta_text }}
      </a>
    </div>
  </div>
</div>

<style type="text/css" media="screen">
  .homepage-collection-hero-new .image {
    background-image: url("{{ section.settings.hero_image_landscape | img_url: '1920x' }}");
    background-position: {{ section.settings.hero_image_landscape_focusX }}% {{ section.settings.hero_image_landscape_focusY }}%;
  }
  @media screen and (max-width: 768px) and (max-aspect-ratio: 1/1){
    .homepage-collection-hero-new .image {
      background-image: url("{{ section.settings.hero_image_portrait | img_url: '1080x' }}");
      background-position: {{ section.settings.hero_image_portrait_focusX }}% {{ section.settings.hero_image_portrait_focusY }}%;
    }
  }
</style>

{% schema %}
  {
    "name": "Slideshow",
    "class": "homepage-collection-hero-new",
    "settings": [
      {
        "type": "image_picker",
        "id": "hero_image_landscape",
        "label": "Landscape Image",
        "info": "Used for landscape orientation displays (desktops)."
      },
      {
        "type": "text",
        "id": "hero_image_landscape_focusX",
        "label": "Landscape Focus Point X"
      },
      {
        "type": "text",
        "id": "hero_image_landscape_focusY",
        "label": "Landscape Focus Point Y"
      },
      {
        "type": "image_picker",
        "id": "hero_image_portrait",
        "label": "Portrait Image",
        "info": "Used for portrait orientation displays (phones, etc.),"
      },
      {
        "type": "text",
        "id": "hero_image_portrait_focusX",
        "label": "Portrait Focus Point X"
      },
      {
        "type": "text",
        "id": "hero_image_portrait_focusY",
        "label": "Portrait Focus Point Y"
      },
      {
        "type": "text",
        "id": "hero_text",
        "label": "Text",
        "default": "Welcome to our store"
      },
      {
        "type": "text",
        "id": "hero_cta_text",
        "label": "CTA Text",
        "default": "Our Products"
      },
      {
        "type": "url",
        "id": "hero_cta_link",
        "label": "CTA Link"
      }
    ]
  }
{% endschema %}
