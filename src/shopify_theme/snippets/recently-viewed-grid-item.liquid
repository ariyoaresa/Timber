{% comment %}
This snippet is a Handlebars template. Recent products are stored in a cookie with javascript and rendered client-side. 
{% endcomment %} 
{% raw %} 
  <div id="style-{{ style_number }}" class="recent-product-grid-item {{#if on_sale}} on-sale {{/if}}">

    <div class="header-row">

      <h4>
        <a href="{{ url }}">{{ title }}</a> 
      </h4>

    </div>
    <div class="image-row">

      <a href="{{ url }}">
        <img class="featured-image" src="{{ featured_image }}" alt="{{ featured_image_alt }}">
      </a>

    </div>
    
    <div class="meta-row">
      <div class="info-block">
      
        {{#if on_sale}} 
          <div class="sale-price">
            Now: {{price_in_dollars}}
          </div>
          <div class="compare-at-price">
            MRSP: <span>{{compare_in_dollars}}</span>
          </div>
        {{ else }}
          {{#if has_price}}
            <div>
              US {{price_in_dollars}}
            </div>
          {{/if}}
          {{#if has_style_number}}
            <div>
              Style #: {{style_number}}
            </div>
          {{/if}}
        {{/if}}
      </div>

      <div class="button-block">
        <a class="button" href="{{ url }}">
          <span class="label">
            {{# if on_sale}}
              Sale
            {{ else }}
              View Dress
            {{/if}}


          </span>
          <span class="icon"></span>
        </a>
      </div>
    </div>
  </div>
{% endraw %}
