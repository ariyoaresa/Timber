{% include 'capture-style-number' %}

{% capture image_alt_text %}
  {{ product.title | escape }} - {{ product.description | strip_html | truncate: 100 }}
{% endcapture %}

<a href="#"
   id="lookbook-style-{{ style_number }}"
   class="lookbook-grid-item{% if forloop.last %} last-item{% endif %}"
   data-item-index="{{ paginate.current_offset | plus: forloop.index0 }}"
   data-style-number="{{ style_number }}"
   data-title="{{ product.title }}"
   data-image-url="{{ product.featured_image.src | product_img_url: '1024x1024' }}">

  <div class="image-row">
    <img src="{{ product.featured_image.src | product_img_url: 'large' }}" alt="{{ image_alt_text | escape }}">
  </div>
</a>
