{% include 'sub-menu-categories' %}
<header class="product-grid-filter-header{% if sub-menu-categories %} has-filter{% endif %}">
  <div class="heading-block">
    <h2>
      {% if current_tags %}
        {{ current_tags }}
      {% else %}
        {% if collection.handle == 'shop' %}
          Shop THEIA
        {% elsif collection.handle == 'collections' %}
          THEIA Collections
        {% else %}
          {{ collection.title }} Collection
        {% endif %}
      {% endif %}
    </h2>
  </div>
  {% if sub-menu-categories %}
    <div class="filter-block">
      <select id="product-tag-filter">
        <option value="{{ coll.url }}/">{% if all_items_label %}{{ all_items_label }}{% else %}View All{% endif %}</option>
        {% for c in sub-menu-categories %}{% assign cat = c | strip %}{% if coll.tags contains cat %}
          <option value="{{ coll.url }}/{{ cat | handle }}"
                  {% if current_tags contains cat %}selected="selected"{% endif %}>
            {{ cat }}
          </option>
        {% endif %}{% endfor %}
      </select>
    </div>
  {% endif %}
</header>
