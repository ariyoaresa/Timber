{% assign current_url = '' %}

{% case template %}
{% when 'page' %}
{% assign current_url = page.url %}
{% when 'blog' %}
{% assign current_url = blog.url %}
{% when 'article' %}
{% assign current_url = blog.url %}
{% when 'collection' %}
{% assign current_url = collection.url %}
{% when 'product' %}
{% assign current_url = product.url %}
{% comment %}Override the variables used in pinterest-pin-button.liquid{% endcomment %}
{% capture pin_page_url %}{{ shop.url }}{{ share_url }}{% endcapture %}
{% assign pin_media_url = product.featured_image.src | product_img_url: 'large' %}
{% capture pin_description %}{{ product.title }} - #{{ style_number }} - {{ product.description | strip_html }}{% endcapture %}
{% endcase %}

<div class="share-buttons">
  {% include 'facebook-like-button' %}
  {% include 'twitter-tweet-button' %}
  {% include 'pinterest-pin-button' %}
</div>
