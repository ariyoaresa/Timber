{% assign top-level-layout = 'theme' %}<!doctype html>
<!--[if lt IE 9]><html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->
  <head>

    {% include 'html-head-common' %}

    <!-- Header hook for plugins ================================================== -->
    {{ content_for_header }}

    {% include 'html-head-scripts' %}

  </head>

  {% comment %}
  Add the page template as a class for easy page or template specific styling.
  {% endcomment %}
  <body {% include 'html-body-attributes' %}>

    {% include 'html-body-top-scripts' %}

    <div id="mobileSideNav" class="mobile-side-nav">

      <div class="search-bar-row">
        {% include 'search-bar' %}
      </div>

      <div class="main-block">

        <div class="main-menu-row">
          {% assign show_home_link = true %}
          {% include 'main-menu' %}
          {% assign show_home_link = false %}
        </div>

        <div class="customer-profile-login-link-row">
          {% include 'customer-profile-login-link' %}
        </div>

        {% if customer %}

          <div class="customer-account-menu-row">
            {% include 'customer-account-menu' %}
          </div>

        {% endif %}

      </div>

    </div>

    <div class="container">

      {% include 'header' %}

      <main class="main-content" role="main">

        {{ content_for_layout }}

      </main>

      {% include 'footer' %}

    </div>

    {% include 'html-footer-scripts' %}

  </body>
</html>
