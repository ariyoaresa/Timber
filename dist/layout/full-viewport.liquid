{% assign top-level-layouts = 'full-viewport,main' | split: ',' %}<!doctype html>
<!--[if lt IE 9]><html class="full-viewport no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="full-viewport ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="full-viewport no-js"> <!--<![endif]-->
  <head>

    {% include 'html-head-common' %}

    <!-- Header hook for plugins ================================================== -->
    {{ content_for_header }}

    {% include 'html-head-scripts' %}

  </head>

  {% comment %}
  Add the page template as a class for easy page or template specific styling.
  {% endcomment %}
  <body {% include 'html-body-attributes' %}>

    {% include 'html-body-top-scripts' %}

    {% include 'mobile-side-nav' %}

    <div id="header-container" class="header-container">

      {% include 'header' %}

    </div>

    <div id="body-container" class="body-container">

      <div class="full-viewport homepage-hero">
        <div class="image"></div>
      </div>

      <main class="main-content" role="main">

        {{ content_for_layout }}

      </main>

      {% include 'footer' %}

    </div>

    {% include 'html-footer-scripts' %}

    <script>
        $(function(){
            $('#header-container').headroom({
                scroller: document.getElementsByClassName('body-container')[0]
            });
        });
    </script>

  </body>
</html>
