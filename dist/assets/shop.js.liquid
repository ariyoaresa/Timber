timber.getUrlVars = function () {
    var result = {};
    var location = window.location.href.split('#');
    var parts = location[0].replace(/[?&]+([^=&]+)=([^&]*)/gi, function(m,key,value) {
        result [key] = value;
    });
    return result ;
};

timber.homepageHero = function(){
    var scroll = timber.cache.homepageHeroScroller,
        hero = timber.cache.homepageHero;

    scroll.click(function(e){
        e.preventDefault();

        var height = hero.outerHeight();
        $('#body-container').animate({scrollTop: height}, 600, 'swing');
    });


    hero.addClass('loading');
    timber.loader.show(hero[0]);

    $(window).load(function(){
        hero.removeClass('loading');
        scroll.addClass('out');
        scroll.removeClass('initial');
        setTimeout(function(){
            scroll.removeClass('out');
        }, 600);
    });
};

timber.switchClass = function( $el, c1, c2){
    if ( $el.hasClass(c1) ) {
        $el.removeClass(c1);
        $el.addClass(c2);
    } else {
        $el.removeClass(c2);
        $el.addClass(c1);
    }
};

