{% raw %} 
  <div id="style-{{ style_number }}" class="recent-product-grid-item {{#if on_sale}} on-sale {{/if}}">

    <div class="header-row">

      <h4>
        <a href="{{ url }}">{{ title }}</a> 
      </h4>

    </div>
    <div class="image-row {% endraw %}{% comment %} {{#if has_back_image}} has-back-image {{/if}} {% endcomment %}{% raw %} ">

      <a href="{{ url }}">
{% endraw %}{% comment %}{{#if has_back_image}}
          <img class="back-image" src="{{ back_image }}" alt="{{ back_image_alt }}">
        {{/if}}{% endcomment %}{% raw %}
        <img class="featured-image" src="{{ featured_image }}" alt="{{ featured_image_alt }}">
      </a>

    </div>
    
    <div class="meta-row">
      <div class="info-block">
      
        {{#if on_sale}} 
          <div class="sale-price">
            Now: {{price_in_dollars}}
          </div>
          <div class="compare-at-price">
            MRSP: <span>{{compare_in_dollars}}</span>
          </div>
        {{ else }}
          {{#if has_price}}
            <div>
              US {{price_in_dollars}}
            </div>
          {{/if}}
          {{#if has_style_number}}
            <div>
              Style #: {{style_number}}
            </div>
          {{/if}}
        {{/if}}
      </div>

      <div class="button-block">
        <a class="button" href="{{ url }}">
          <span class="label">
            {{# if on_sale}}
              Sale
            {{ else }}
              View Dress
            {{/if}}


          </span>
          <span class="icon"></span>
        </a>
      </div>
    </div>
  </div>
{% endraw %}
