{% assign current_url = '' %}

{% case template %}
{% when 'page' %}
{% assign current_url = page.url %}
{% when 'blog' %}
{% assign current_url = blog.url %}
{% when 'article' %}
{% assign current_url = blog.url %}
{% when 'collection' %}
{% assign current_url = collection.url %}
{% when 'product' %}
{% assign current_url = product.url %}
{% assign featured_image_url = product.featured_image.src | product_img_url: 'large' %}
{% assign featured_product_description = product.description | strip_html %}
{% endcase %}


{% capture share_url %}{{ shop.url }}{{ current_url }}{% endcapture %}

<div class="share-buttons">
	{% include 'facebook-like-button' %}
 	{% include 'twitter-tweet-button' %}
 	{% case template %}
 	{% when 'product' %}
 	{% include 'pinterest-pin-button',
    pin_page_url: share_url,
    pin_media_url: featured_image_url,
    pin_description: featured_product_description %}
 	{% endcase %}
</div>
