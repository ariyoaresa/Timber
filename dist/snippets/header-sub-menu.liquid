{% capture coll_url %}{{ shop.url }}/collections/{{ coll.handle }}{% endcapture %}
<li><a class="sub-menu-header" href="{{ coll_url }}">{{ coll.title }}</a>
  <!-- these are the tags that are present in this collection -->
  {% for c in sub-menu-categories %}{% assign cat = c | strip %}{% if coll.tags contains cat %}
    <li><a class="sub-menu-link" href="{{ coll_url }}/{{ cat | handle }}">{{ cat }}</a></li>
  {% endif %}{% endfor %}
</li>
