<div class="sub-menu-column">
  <!-- these are the tags that are present in this collection -->
  {% for c in sub-menu-categories %}{% assign cat = c | strip %}{% if coll.tags contains cat %}
    <a class="sub-menu-link" href="{{ coll.url }}/{{ cat | handle }}">{{ cat }}</a>
  {% endif %}{% endfor %}
  {% if coll.handle == 'bridal' %}
    <a class="sub-menu-link" href="http://press.theiacouture.com/en/trunk-shows/">Trunk Shows</a>
    <a class="sub-menu-link" href="/pages/bridal-videos/">Bridal Videos</a>
  {% else %}
    <a class="sub-menu-link mobile-view-all-link" href="{{ coll.url }}">View All</a>
  {% endif %}
</div>
