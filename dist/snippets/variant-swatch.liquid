{% if product.options[1] %}
  <fieldset class="swatch js-colour-swatch-field"> 
    {% assign used = '' %}
    <legend> {{ product.options[1] }}: </legend>
      {% for variant in product.variants %}
        {% unless used contains variant.option2 %}
  
          <div class="swatch-element colour-swatch" data-colour="{{ variant.option2 }} ">
            
            <input type="radio" class="colourSelect" name="colour" id="{{ variant.option2 }}-select" data-colour="{{ variant.option2 }}" />

            <label class="colour-label" for="{{ variant.option2 }}-select"></label>

          </div>

          {% capture used %}{{ used }} {{ variant.option2 }}{% endcapture %}
        {% endunless %}                      
      {% endfor %}
      <p class="colour-name"> colour </p>
  </fieldset>
{% endif %}

{% if product.options[0] %} 
   <legend> {{ product.options[0] }} </legend>
    <div id="swatch-container">
      <fieldset class="swatch js-size-swatch-field">
        {% for variant in product.variants %}
         
         <div class="swatch-element size-swatch {% if variant.available %}size-available{% endif %} js-hidden-size">
            {% if variant.available == false %}
              <div class="soldOut"></div>
            {% endif %}
            <input type="radio" name="id" data-colour-size="{{ variant.option2 }}" id="{{ variant.option1 }}-{{ variant.option2 }}-select" value="{{ variant.id }}" />

            <label class="size-label" for="{{ variant.option1 }}-{{ variant.option2 }}-select"><span>{{ variant.option1 }}</span></label>
             
          
          </div>
        {% endfor %}
      </fieldset>
    </div>


{% endif %}
