<p id="add-to-cart-msg-wishlist"></p>

<div class="wishlist-block">
  <div class="spinner-wrapper"></div>
  <div id="wishlist-viewed-products"></div>
</div>

<script id="wishlist-viewed-product-template"  type="text/x-jquery-tmpl">
  <div id="product-${handle}" class="wishlist-item">
    <div class="image-column">
      <div class="wishlist-item-image">
        <a href="${url}">
          <img src="${Shopify.resizeImage((featured_image ? featured_image : "http://cdn.shopify.com/s/images/admin/no-image-medium.gif"), "medium")}" />
        </a>
      </div>
    </div>
    <div class="info-options-column">
      <div class="header-row">
        <h4>
          <a href="${url}">
            ${title} &ndash; {{if price_varies}}{{/if}}${Shopify.formatMoney(price, currency)}
          </a>
        </h4>
      </div>

      <div class="options-row">
        <div class="info-column">

          {{if hasStyleNumber}}
          <div class="style-number">
            <span class="icon"></span>
            <span class="label">Style #: ${styleNumber}</span>
          </div>
          {{/if}}

          <a class="remove-item-link" data-product-id="${id}" title="Delete item" href="#">
            <span class="icon"></span>
            <span class="label">Remove from my favorites</span>
          </a>

        </div>
        <div class="size-column">
        </div>
        <div class="color-column">
        </div>
        <div class="button-column">

          <form method="post" action="/cart/add">
            <input type="hidden" name="id" value="${variants[0].id}" />
            <input type="hidden" name="quantity" value="1" />

            <button id="add-to-cart-wishlist" name="add" class="button" onclick="addToCartWishlist(this); return false;">
              <span class="label">Add to cart</span>
              <span class="icon"></span>
            </button>

          </form>

        </div>
      </div>
    </div>
  </div>
</script>

<script type="text/javascript">
    // Including api.jquery.js conditionnally.
    if (typeof Shopify.resizeImage === 'undefined') {
        document.write({{ "api.jquery.js" | shopify_asset_url | script_tag | json }});
    }
</script>
