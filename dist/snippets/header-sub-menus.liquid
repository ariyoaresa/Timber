{% include 'sub-menu-categories' %}
<!-- Shop - available-online -->
<div id="sub-menu-desktop-available-online" class="js-header-sub-menu sub-menu-desktop-available-online">
  <ul>
    {% for coll in collections %}
      {% if coll.metafields.collection.type == 'available-online' %}
        {% include 'header-sub-menu' %}
      {% endif %}
    {% endfor %}
  </ul>
</div>
<!-- Collections - exclusive -->
<div id="sub-menu-desktop-exclusive" class="js-header-sub-menu sub-menu-desktop-exclusive">
  <ul>
    {% for coll in collections %}
      {% if coll.metafields.collection.type == 'exclusive' %}
        {% include 'header-sub-menu' %}
      {% endif %}
    {% endfor %}
  </ul>
</div>
