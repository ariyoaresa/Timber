<nav class="main-menu" role="navigation">
  <ul>
    {% if show_home_link %}
      <li><a class="main-menu-link" href="/">Home</a></li>
    {% endif %}
    {% for link in linklists.main-menu.links %}
      {% if link.url contains '/collections/?view=' %}
        {% assign link_id = link.url | split: '=' %}
        {% assign link_id = link_id[1] %}
        {% capture menu_target %}{{ link_id }}{% endcapture %}
      {% else %}
        {% assign link_id = link.title | handle %}
      {% endif %}
      <li><a id="{{ link_id }}-main-menu-link" class="main-menu-link" {% if menu_target %}data-target="{{ menu_target }}" {% endif %}href="{{ link.url }}">{{ link.title }}</a></li>
    {% endfor %}
  </ul>
</nav>
