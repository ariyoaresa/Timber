{% layout 'full-viewport' %}

<div id="homepage-hero" class="homepage-hero">
  <div class="inner">
    <div class="content">
      <h2>Shop the latest from the Fall Collection.</h2>
      <a href="/collections/shop">Start Shopping</a>
    </div>
  </div>
</div>

<div class="block-navigation-hero">

  <nav class="block-navigation-menu" role="navigation">
    <div class="block-navigation-column">
      <div class="inner">
        <a class="block-navigation-link-shop" href="/collections/shop/new-arrivals">
          <div class="image"></div>
          <div class="overlay"></div>
          <div class="content">
            <h3>
              Shop<br/>New Arrivals
            </h3>
          </div>
        </a>
      </div>
    </div>
    <div class="block-navigation-column">
      <div class="inner">
        <a class="block-navigation-link-press" href="http://press.theiacouture.com/">
          <div class="image"></div>
          <div class="overlay"></div>
          <div class="content">
            <h3>
              Celebrity<br/>Fashion
            </h3>
          </div>
        </a>
      </div>
    </div>
  </nav>

</div>

<div class="social-link-newsletter-hero">
  <div class="social-link-newsletter-column">

    <h2>Keep in touch</h2>

    {% include 'social-link-block' %}

  </div>
  <div class="social-link-newsletter-column">

    {% include 'newsletter-signup-block' %}

  </div>
</div>
