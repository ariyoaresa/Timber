    {{ 'the-oprah-magazine-logo.svg' | asset_url | img_tag }}
    {{ 'the-oprah-magazine-logo.png' | asset_url | img_tag }}
  </div>
</div>

<div class="collections-block">
  <div class="wrapper">

    {% for collection in collections %}

      {% include 'collection-grid-item' %}

    {% endfor %}
    
  </div>
</div>

<div class="social-hero">
  <h2>Keep in touch:</h2>
  {% include 'newsletter-signup-block' %}
  {% include 'social-link-block' %}
</div>


